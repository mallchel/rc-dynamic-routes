        "strict": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["dom", "dom.iterable", "esnext"],
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "declaration": true,
        "outDir": "lib"
